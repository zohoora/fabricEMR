# FabricEMR Environment Configuration
# Copy this file to .env and customize for your environment
# NEVER commit .env to version control

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=medplum
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=medplum

# ===========================================
# REDIS
# ===========================================
REDIS_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# ===========================================
# MEDPLUM SERVER
# ===========================================
MEDPLUM_PORT=8103
MEDPLUM_BASE_URL=http://localhost:8103/
MEDPLUM_APP_BASE_URL=http://localhost:3000/
MEDPLUM_STORAGE_BASE_URL=http://localhost:8103/storage/
MEDPLUM_SUPPORT_EMAIL="Medplum <support@medplum.com>"
MEDPLUM_MAX_JSON_SIZE=1mb
MEDPLUM_MAX_BATCH_SIZE=50mb

# Google OAuth (optional - get credentials from Google Cloud Console)
MEDPLUM_GOOGLE_CLIENT_ID=
MEDPLUM_GOOGLE_CLIENT_SECRET=

# reCAPTCHA (optional - get keys from Google reCAPTCHA admin)
MEDPLUM_RECAPTCHA_SITE_KEY=
MEDPLUM_RECAPTCHA_SECRET_KEY=

# ===========================================
# LLM GATEWAY (LiteLLM)
# ===========================================
LITELLM_MASTER_KEY=CHANGE_ME_TO_SECURE_KEY
LITELLM_DATABASE_URL=postgresql://medplum:CHANGE_ME_TO_SECURE_PASSWORD@postgres:5432/litellm

# Cloud LLM API Keys (optional - uncomment and add if using cloud models)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ===========================================
# OLLAMA (External Server)
# ===========================================
# URL of the Ollama server on your local network
# Examples:
#   - http://192.168.1.100:11434  (another machine on LAN)
#   - http://host.docker.internal:11434  (host machine from Docker)
OLLAMA_API_BASE=http://192.168.1.100:11434

# ===========================================
# AI BOT CONFIGURATION
# ===========================================
# URL for bots to reach the LLM Gateway
LITELLM_BASE_URL=http://llm-gateway:4000
LITELLM_API_KEY=CHANGE_ME_TO_SECURE_KEY
